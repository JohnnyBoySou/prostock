{
  "expo": {
    "name": "20Stock",
    "slug": "20Stock",
    "version": "0.0.1",
    "scheme": "20stock",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#019866"
    },
    "ios": {
      "supportsTablet": false,
      "requireFullScreen": true,
      "buildNumber": "0.0.1",
      "bundleIdentifier": "com.joaosousa.20stock",
      "usesIcloudStorage": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Esse app usa a câmera para escanear documentos com Inteligência Artificial."
      }
    },
    "android": {
      "package": "com.joaosousa.20stock",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#019866"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-document-picker",
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Permita que o ProStock acesse sua câmera."
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Esse app precisa de permissão para acessar suas fotos para poder enviar para IA de leitura de documentos."
        }
      ],
      [
        "onesignal-expo-plugin",
        {
          "mode": "production"
        }
      ]
    ],
    "extra": {
      "oneSignalAppId": "a761f833-9b85-4811-ac5b-b5cd68313b34",
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "OneSignalNotificationServiceExtension",
                  "bundleIdentifier": "com.joaosousa.20stock.OneSignalNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.joaosousa.20stock.onesignal"
                    ]
                  }
                }
              ]
            }
          }
        },
        "projectId": "f7656389-0c3d-4329-b9df-3554a81e6890"
      }
    }
  }
}